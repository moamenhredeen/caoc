# ---------------------------- Variables ----------------------------
cc = gcc
cflags = -Wall -Wextra -std=c99 -g
test_cflags = -Wall -Wextra -std=c99 -g -Isrc -Itests

# ---------------------------- Build rules ----------------------------
rule compile
  command = $cc $cflags -c $in -o $out
  description = Compiling $in
  
rule compile_test
  command = $cc $test_cflags -c $in -o $out
  description = Compiling test $in

rule link
  command = $cc $in -o $out
  description = Linking $out

rule archive
  command = ar rcs $out $in
  description = Creating static library $out

# Clean rule
rule clean
  command = rm -rf build/
  description = Cleaning build directory

# ---------------------------- Build targets ----------------------------
build build/2024/01_a.o: compile src/2024/01_a.c
build build/2024/01_b.o: compile src/2024/01_b.c

# Create static library
build build/2024/lib2024.a: archive build/2024/01_a.o build/2024/01_b.o

# Compile test files
build build/tests/2024/01_test.o: compile_test tests/2024/01_test.c

# Link tests with libraries
build build/tests/2024/01_test: link $
    build/tests/2024/01_test.o $
    build/2024/lib2024.a

# Convenience targets
build all_tests: phony $
    build/tests/2024/01_test

build clean: clean

# Default target
default all_tests
